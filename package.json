{
  "name": "hello-electron",
  "title": "Hello, Electron!",
  "version": "23.4.24",
  "description": "Sample Electron application.",
  "main": "src/js/electron.js",
  "private": true,
  "scripts": {
    "start": "npm version 0.0.0 && npm version $(date +%y.%m.%d) && electron .",
    "build-linux": "npm version 0.0.0 && npm version $(date +%y.%m.%d) && ./node_modules/.bin/electron-builder --linux AppImage"
  },
  "build": {
    "directories": {
      "buildResources": "resources"
    },
    "linux": {
      "category": "Development",
      "icon": "path.join(__dirname, 'src/images/icon/512x512.png');",
      "maintainer": "Mike Katip"
    }
  },
  "author": "Mike Katip",
  "homepage": "https://github.com/mikekatip",
  "email": "mike@katip.name",
  "license": "GPLV3",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "dependencies": {
    "jquery": "latest"
  }
}
